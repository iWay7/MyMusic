<?xml version="1.0" encoding="utf-8"?>
<site.iway.androidhelpers.ExtendedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_back_and_img" />

    <site.iway.androidhelpers.ExtendedLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_com_rect"
        android:orientation="vertical">

        <include layout="@layout/divider_line_horizontal_fill" />

        <site.iway.mymusic.user.views.ListActionItem
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_com_rect"
            app:ListActionItemTitle="歌曲缓存" />

        <include layout="@layout/divider_line_horizontal_indent" />

        <site.iway.mymusic.user.views.ListActionItem
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_com_rect"
            app:ListActionItemTitle="歌词缓存" />

        <include layout="@layout/divider_line_horizontal_fill" />

    </site.iway.androidhelpers.ExtendedLinearLayout>

    <site.iway.androidhelpers.ExtendedLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_com_rect"
        android:orientation="vertical">

        <include layout="@layout/divider_line_horizontal_fill" />

        <site.iway.mymusic.user.views.ListActionItem
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_com_rect"
            app:ListActionItemTitle="歌曲列表排序方式" />

        <include layout="@layout/divider_line_horizontal_fill" />

    </site.iway.androidhelpers.ExtendedLinearLayout>

    <site.iway.androidhelpers.ExtendedLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_com_rect"
        android:orientation="vertical">

        <include layout="@layout/divider_line_horizontal_fill" />

        <site.iway.mymusic.user.views.ListActionItem
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_com_rect"
            app:ListActionItemTitle="关于" />

        <include layout="@layout/divider_line_horizontal_fill" />

    </site.iway.androidhelpers.ExtendedLinearLayout>

</site.iway.androidhelpers.ExtendedLinearLayout>